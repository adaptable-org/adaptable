
{
  "name": "Adaptable",
  "description": "Adaptable.org Application",
  "website": "http://adaptable.org",
  "success_url": "/",
  "repository": "https://github.com/adaptable-org/adaptable",
  "logo": "https://avatars0.githubusercontent.com/u/41238063?s=200&v=4",
  "image": "heroku/ruby",
  "env": {
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_HTTP_HOST": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "bin/rails assets:precompile",
        "test": "bundle exec rake test"
      },
      "addons":[
        "heroku-postgresql:in-dyno",
        "heroku-redis:in-dyno"
      ]
    }
  },
  "scripts": {
  },
}
